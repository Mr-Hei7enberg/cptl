RewriteEngine On
RewriteCond %{HTTPS} !on
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}

Header set Content-Security-Policy: upgrade-insecure-requests

# Запрет на воровство картинок (hotlinking)
RewriteCond %{HTTP_REFERER} !^https://(www\.)?posluhybti\.com/.*$ [NC]
RewriteCond %{HTTP_REFERER} !^$ [NC]
RewriteRule .*\.(gif|jpg|jpeg|swf|svg|flv|png)$ https://www.posluhybti.com/img/feed.png [R=302,L]

# Запретить индексацию каталогов
Options -Indexes

# Редирект с index.html на /
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.html\ HTTP/
RewriteRule ^index\.html$ https://posluhybti.com/ [R=301,L]